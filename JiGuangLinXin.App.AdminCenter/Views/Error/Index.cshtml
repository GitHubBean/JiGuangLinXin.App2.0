@{
    ViewBag.Title = "系统异常";
}
@section breadcrumb
{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Console")">控制台</a>
        </li>

        <li>
            <a href="###">系统异常</a>
        </li>
        <li class="active">@ViewData["Code"]</li>
    </ul><!-- .breadcrumb -->
}

<div class="row">
    <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="error-container">
            <div class="well">
                <h1 class="grey lighter smaller">
                    <span class="blue bigger-125">
                        <i class="ace-icon fa fa-random"></i>
                        @ViewData["Code"]
                    </span>
                    @ViewData["Msg"]
                </h1>

                <hr>
                <h3 class="lighter smaller">
                    系统问题，请联系技术人员修复！！!
                    <i class="ace-icon fa fa-wrench icon-animated-wrench bigger-125"></i>
                </h3>

                <div class="space"></div>

                <div>
                    <h3 class="red lighter smaller"> @TempData["ErrorMsg"]</h3>
                    <ul class="list-unstyled spaced inline bigger-110 margin-15">
                        <li>
                            <i class="ace-icon fa fa-comment blue"></i>
                            QQ:15888888888
                        </li>

                        <li>
                            <i class="ace-icon fa fa-phone blue"></i>
                            TEL:15868658650
                        </li>

                        <li>
                            <div class="alert alert-info">
                                <i class="ace-icon fa fa-hand-o-right blue"></i>
                                为了更好的解决问题，联系技术人员的时候请尽量详细描述出现异常的过程！
                            </div>
                        </li>
                    </ul>
                </div>

                <hr>
                <div class="space"></div>

                <div class="center">
                    <a href="javascript:history.go(-1);" class="btn btn-grey">
                        <i class="ace-icon fa fa-arrow-left"></i>
                        返回上一步
                    </a>

                    <a href="@Url.Action("Index","Console")" class="btn btn-primary">
                        <i class="ace-icon fa fa-dashboard"></i>
                        回首页
                    </a>
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT ENDS -->
    </div><!-- /.col -->
</div><!-- /.row -->