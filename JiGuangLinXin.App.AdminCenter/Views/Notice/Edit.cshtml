@model Sys_Notice
@{
    ViewBag.Title = "邻信系统公告";
    ViewBag.ParentUrl = "/Notice/Index";
}
@section breadcrumb
{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index","Console")">控制台</a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ul><!-- .breadcrumb -->
}

<form class="form-horizontal" role="form" id="frm" method="POST" novalidate="novalidate" action="/Notice/Edit">
    <div class="tabbable">
        <ul class="nav nav-tabs padding-16">
            <li class="active">
                <a data-toggle="tab" href="#edit-basic">
                    <i class="green ace-icon fa fa-pencil-square-o bigger-125"></i>
                    公告信息
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-content profile-edit-tab-content">
        <div class="tab-pane in active">
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="N_Title"> 标题 </label>
                @Html.HiddenFor(o => o.N_Id)
                <div class="col-sm-9">
                    @Html.TextBoxFor(o => o.N_Title, new { @class = "col-xs-12 col-sm-10", placeholder = "公告标题", required = "required", data_max = "200" })
                </div>
            </div>


            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="N_SubTitle"> 副标题 </label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(o => o.N_SubTitle, new { @class = "col-xs-12 col-sm-10", placeholder = "公告副标题" })
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="N_Tags">标签</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(o => o.N_Tags, new { @class = "col-xs-5 col-sm-5", placeholder = "公告标签" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="N_Clicks">排序</label>

                <div class="col-sm-9">
                    @Html.TextBoxFor(o => o.N_Clicks, new { @class = "col-xs-5 col-sm-5", placeholder = "公告排序", required = "required", type = "number", min = "0" })
                </div>
            </div>
            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right" for="N_Content">公告内容</label>

                <div class="col-sm-9">
                    @Html.TextAreaFor(o => o.N_Content, new { @class = "col-xs-12 col-sm-10", placeholder = "公告内容", data_max = "500" })
                </div>
            </div>


            <div class="space-4"></div>
            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">分类</label>

                <div class="col-sm-9">
                    <label class="inline">
                        <input name="N_Flag" type="radio" class="ace" value="0" />
                        <span class="lbl middle"> 首页</span>
                    </label>

                    &nbsp; &nbsp; &nbsp;
                    <label class="inline">
                        <input name="N_Flag" type="radio" class="ace" value="1" />
                        <span class="lbl middle"> 社区中心</span>
                    </label>                    &nbsp; &nbsp; &nbsp;
                    <label class="inline">
                        <input name="N_Flag" type="radio" class="ace" value="5" />
                        <span class="lbl middle"> 帮助中心</span>
                    </label>
                </div>
            </div>

            <div class="space-4"></div>

            <div class="form-group">
                <label class="col-sm-3 control-label no-padding-right">状态</label>

                <div class="col-sm-9">
                    <label class="inline">
                        <input name="N_State" type="radio" class="ace" value="0" />
                        <span class="lbl middle"> 上架</span>
                    </label>

                    &nbsp; &nbsp; &nbsp;
                    <label class="inline">
                        <input name="N_State" type="radio" class="ace" value="1" />
                        <span class="lbl middle"> 下架</span>
                    </label>
                </div>
            </div>
            <div class="clearfix form-actions">
                <div class="col-md-offset-3 col-md-9">
                    <button class="btn btn-info" type="submit">
                        <i class="ace-icon fa fa-check bigger-110"></i>
                        确定
                    </button>

                    &nbsp; &nbsp; &nbsp;
                    <button class="btn" type="reset">
                        <i class="ace-icon fa fa-undo bigger-110"></i>
                        重置
                    </button>
                </div>
            </div>

        </div>
    </div>

    <div class="space-4"></div>

    <div class="hr hr-24"></div>
</form>
@section footer{
    <script src="/assets/js/validation/jquery-html5Validate.js"></script>
    <script src="/js/common.js"></script>
    <script>
        $("#frm").html5Validate(function () {
            this.submit();
        }, {
            // novalidate: false,
            // labelDrive: false

        });
    </script>
}